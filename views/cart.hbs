<!--suppress ALL -->
<h1>{{title}}</h1>
<div id="cart">
    {{#if items.length}}
        <table>
            <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {{#each items}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-danger small js-remove"
                                data-csrf="{{@root.csrf}}"
                                data-id="{{id}}">
                            Удалить
                        </button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p><strong>Цена</strong> <span class="price">{{price}}</span></p>
        <form method="POST" action="/orders">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn" type="submit">Сделать заказ</button>
        </form>
    {{else}}
        <p>Нет элементов в корзине</p>
    {{/if}}
</div>
