<h1>{{title}}{{course.title}}</h1>

<form method="POST" action="/courses/{{course.id}}/edit" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" value="{{course.price}}" required min="1">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" value="{{course.image}}" required>
        <label for="image">URL картинки</label>
        <span class="helper-text" data-error="Введите url картинки"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn" type="submit">Редактировать курс</button>
</form>
<form method="POST" action="/courses/{{course.id}}/remove">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn red" type="submit">Удалиить курс</button>
</form>
